<!DOCTYPE html>
<html>
<head>
    <%- include('../partials/head.ejs',{title: "Register" }) %>
</head>
<body>
     <div class="registration-form">
        <form action="/register" method="POST">
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
                <% if (message != undefined) { %>
                     <%= message %> 
                   <% } %>
                </div> 
            <div class="form-group">
                <input type="email" class="form-control item"  name="email" placeholder="Email" />
            </div>
            <div class="form-group">
              <input type="text" class="form-control item" name="username"  placeholder="Username">
            </div>
            <div class="form-group">
                <input type="password" class="form-control item"  name="password" placeholder="password"/>
            </div>
            <div class="form-group">
                <button  class="btn btn-block create-account">Create Account</button>
            </div>
            <span >Have an account? <a href="/login">Login</a></span>
        </form>
    </div>  
    <%- include('../partials/scripts.ejs') %>
</body>
</html>
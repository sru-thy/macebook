<!DOCTYPE html>
<html>
<head>   
    <%- include('../partials/head.ejs',{title: "Login" }) %>     
</head>
<body>
    <div class="registration-form">
        <form action="/login" method="POST">
            <div class="form-icon">
                <span><i class="icon icon-user"></i></span>
            </div>
            <div class="form-group">
            <% if (message) { %>
                <%= message %> 
               <% } %>
            </div>
            <div class="form-group">
                <input type="email" class="form-control item" id="email" name="email" placeholder="Email" value="<%= typeof email != 'undefined' ? email : '' %>"/>
            </div>
            <div class="form-group">
                <input type="password" class="form-control item" id="password" name="password" placeholder="password" value="<%= typeof password != 'undefined' ? password : '' %>"/>
            </div>
            <div class="form-group">
                <button  class="btn btn-block create-account">Login</button>
            </div>
            <span>Dont have an account? <a href="/register">Register</a></span>
        </form>
    </div>
    <%- include('../partials/scripts.ejs') %>
</body>
</html>